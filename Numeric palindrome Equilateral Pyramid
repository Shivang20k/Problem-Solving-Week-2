#include <algorithm>
#include <iostream>

#include <vector>

using namespace std;
int main(){
    int n;
    cin>>n;    
    for(int r=0;r<n;r++){  
        for(int c=0; c<n-r;c++)//spaces
        {
            cout<<" ";
        }
        int c;
        for(c=0;c<r+1;c++)//char first half,left half
        {
            cout<<c+1;
        }
        for(c-=1; c>=1;c--)//char secong half,right half
        {
            cout<<c;
        }
    cout<<endl;
    }
}
