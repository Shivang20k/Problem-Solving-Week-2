3]  Degree to Fahrenhiate 


#include <bits/stdc++.h>
using namespace std;

#include <iostream>
using namespace std;


double degree2fhr(float cel)
{
 return (cel*1.8)+32;
}

int main() {
	float cel = 23.5f;
	cout<< cel<< " degree celsius in fahrenhiate is = "<<degree2fhr(cel);
	
	return 0;
}

