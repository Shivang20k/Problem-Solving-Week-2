2] Kilometres to Miles 



#include <bits/stdc++.h>
using namespace std;

#include <iostream>
using namespace std;


double kmtomiles(float km)
{
 return km*=0.62137;
}

int main() {
	int num = 59;
	cout<< num<< " Kilometres in Miles are = "<<kmtomiles(num);
	
	return 0;
}



