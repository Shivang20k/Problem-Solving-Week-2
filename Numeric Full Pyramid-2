                                                 1 
                                                2 3  2
                                               3 4 5  3 2
                                              4 5 6 7  4 3 2
                                              (broke figure in left & right part)
#include <algorithm>
#include <iostream>

#include <vector>

using namespace std;
int main(){
    int n;
    cin>>n;    
    for(int r=0;r<n;r++){  // outer loop
    //space
      for(int c = 0; c<n-r-1; c++)
      {
            cout<< " ";
      }
    // stars
    //1st half
     for(int c =0 ; c<r+1 ; c++)// no. of numerals in left half
     { 
         cout<< c+r+1 <<" ";
     }
    //2nd half
    for(int c=r+1;c>1;c--)// no. of numerals in right half
    {cout<<" "<<c;}
    cout<<endl;
    }
    
}
                                              
