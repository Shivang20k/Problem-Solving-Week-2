#include <algorithm>
#include <iostream>

#include <vector>

using namespace std;
int main(){
    int n;
    cin>>n;
    //upper half
    for(int r=0;r<n;r++)
    {
        for(int c =0 ; c<r+1;c++)
            cout<<r+3;
        cout<<endl;
    }
    //lower half
    for(int r=0; r<n ; r++)
    {
        for(int c=0;c<n-r;c++)
            cout<<5-r;
        cout<<endl;
    }
     
    
}
