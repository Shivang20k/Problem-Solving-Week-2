                                                      12345
#include <algorithm>
#include <iostream>

#include <vector>

using namespace std;
int main(){
    int n;
    cin>>n;    
    for(int r=0;r<n;r++){  
        if(r!=n-1)
        {
            for(int c=0;c<r+1;c++)
            {
            if(c==0 || c==r)  
                cout<<c+1;
            else
                cout<<" "; 
            }
        }
        else
        {
            for(int c=0;c<r+1;c++){
              cout<<c+1;}
        }
    cout<<endl;
    }
}
