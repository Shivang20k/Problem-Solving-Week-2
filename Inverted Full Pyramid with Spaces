                                         X  X  X  X  
                                           X  X  X  
                                            X  X  
                                             X  

#include <algorithm>
#include <iostream>

#include <vector>

using namespace std;
int main(){
    int n;
    cin>>n;
    
    for(int r=0;r<n;r++){
    //space
      for(int c = 0; c<r; c++)
            cout<< " ";
    // stars
     for(int c =0 ; c<n-r ; c++) // no. of stars not characters
         cout<< "X  ";
    cout<<endl;
    }
    
}
